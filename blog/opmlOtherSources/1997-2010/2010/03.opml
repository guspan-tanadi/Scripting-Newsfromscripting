					<outline text="Winter? What's that? &quot;;-&gt;&quot;" created="Sat, 20 Mar 2010 00:09:30 GMT"/>
					<outline text="&lt;object width=&quot;400&quot; height=&quot;224&quot; &gt;&lt;param name=&quot;allowfullscreen&quot; value=&quot;true&quot; /&gt;&lt;param name=&quot;allowscriptaccess&quot; value=&quot;always&quot; /&gt;&lt;param name=&quot;movie&quot; value=&quot;http://www.facebook.com/v/373559977454&quot; /&gt;&lt;embed src=&quot;http://www.facebook.com/v/373559977454&quot; type=&quot;application/x-shockwave-flash&quot; allowscriptaccess=&quot;always&quot; allowfullscreen=&quot;true&quot; width=&quot;400&quot; height=&quot;224&quot;&gt;&lt;/embed&gt;&lt;/object&gt;" created="Sat, 20 Mar 2010 00:06:55 GMT"/>
